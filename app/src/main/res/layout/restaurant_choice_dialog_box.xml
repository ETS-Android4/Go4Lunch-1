<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/outline">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurant_choice_dialog_box_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/restaurant_choice_dialog_box_title_size"
        android:textStyle="bold"
        android:textColor="@color/light_text_color"
        android:layout_margin="@dimen/restaurant_choice_dialog_box_title_margin_size"
        android:paddingHorizontal="@dimen/restaurant_choice_dialog_box_title_padding_size"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurant_choice_dialog_box_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_choice_dialog_box_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/restaurant_choice_dialog_box_message_size"
        android:textColor="@color/light_text_color"
        android:layout_marginHorizontal="@dimen/restaurant_choice_dialog_box_message_margin_horizontal_size"
        android:layout_marginBottom="@dimen/restaurant_choice_dialog_box_message_margin_bottom_size"
        android:paddingHorizontal="@dimen/restaurant_choice_dialog_box_padding_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>