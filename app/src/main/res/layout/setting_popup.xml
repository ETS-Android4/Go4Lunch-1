<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/setting_popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/setting_menu"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:drawableRight="@drawable/ic_settings"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/setting_popup_language_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/setting_popup_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:text="@string/language_select"
        android:textSize="@dimen/setting_popup_text_normal_size"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/setting_popup_language_selector_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/setting_popup_title"
        app:layout_constraintStart_toEndOf="@id/setting_popup_language_tv"
        android:layout_margin="8dp"
        android:text="English"
        android:background="@color/fui_transparent"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/setting_popup_delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_popup_language_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp"
        android:text="@string/delete_account"
        android:textSize="@dimen/setting_popup_text_normal_size"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/setting_popup_delete_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_popup_language_tv"
        app:layout_constraintStart_toEndOf="@id/setting_popup_delete_account"
        android:src="@drawable/ic_delete"
        android:layout_margin="18dp"
        android:background="@color/fui_transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>